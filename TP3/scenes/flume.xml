            <rectangle x1="-0.5" y1="-0.5" x2="0.5" y2="0.5" />
        </primitive>
    </primitives>
    <components>
     <component id="wall1">
            <transformation>
                <translate x="50" y="0" z="-150" />
                <scale x="350" y="150" z="1"/> 
            </transformation>
            <materials>
                <material id="default" />
            </materials>
            <texture id="inherit"/>
