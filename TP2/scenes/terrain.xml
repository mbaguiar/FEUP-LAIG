<yas>
    <scene root="root" axis_length="15" />
    <views default="default">
        <perspective id="default" near="0.1" far="500" angle="40">
            <from x="60" y="25" z="60" />
            <to x="0" y="0" z="0" />
        </perspective>
        <ortho id="bed_orthocamera" near="1" far="100" left="-30" right="30" top="30" bottom="-30">
            <from x="20" y="10" z="60" />
            <to x="20" y="10" z="0" />
        </ortho>
        <perspective id="desk_camera" near="0.1" far="250" angle="60">
            <from x="30" y="10" z="30" />
            <to x="0" y="10" z="30" />
        </perspective>
        <perspective id="sidetable_camera" near="0.1" far="100" angle="60">
            <from x="25" y="7" z="25" />
            <to x="25" y="7" z="0" />
        </perspective>
    </views>
    <ambient>
        <ambient r="0" g="0" b="0" a="1" />
        <background r="0" g="0" b="0" a="1" />
    </ambient>
    <lights>
        <omni id="light1" enabled="1">
            <location x="5" y="40" z="5" w="1" />
            <ambient r="0" g="0" b="0" a="1" />
            <diffuse r="1" g="1" b="1" a="1" />
            <specular r="1" g="1" b="1" a="1" />
        </omni>
        <omni id="light2" enabled="1">
            <location x="5" y="40" z="35" w="1" />
            <ambient r="0" g="0" b="0" a="1" />
            <diffuse r="1" g="1" b="1" a="1" />
            <specular r="1" g="1" b="1" a="1" />
        </omni>
        <omni id="light3" enabled="1">
            <location x="25" y="40" z="5" w="1" />
            <ambient r="0" g="0" b="0" a="1" />
            <diffuse r="1" g="1" b="1" a="1" />
            <specular r="1" g="1" b="1" a="1" />
        </omni>
        <omni id="light4" enabled="1">
            <location x="25" y="40" z="35" w="1" />
            <ambient r="0" g="0" b="0" a="1" />
            <diffuse r="1" g="1" b="1" a="1" />
            <specular r="1" g="1" b="1" a="1" />
        </omni>
        <omni id="light5" enabled="1">
            <location x="15" y="40" z="20" w="1" />
            <ambient r="0" g="0" b="0" a="1" />
            <diffuse r="1" g="1" b="1" a="1" />
            <specular r="1" g="1" b="1" a="1" />
        </omni>
        <spot id="lamp_light" enabled="1" angle="70" exponent="0.1">
            <location x="3" y="10" z="3" w="1" />
            <target x="3" y="0" z="3" w="1"/>
            <ambient r="0.2" g="0.2" b="0.2" a="1" />
            <diffuse r="0.4" g="0.4" b="0.4" a="0.4" />
            <specular r="0.4" g="0.4" b="0.4" a="0.4" />
        </spot>
    </lights>
    <textures>
        <texture id="terrain" file="../scenes/images/terrain.jpg" />
        <texture id="terrain-map" file="../scenes/images/terrain-height-map.jpg" />
        <texture id="water" file="../scenes/images/water2.jpg" />
        <texture id="water-map" file="../scenes/images/wave-height-map.png" />
    </textures>
    <materials>
        <material id="default" shininess = "0">
            <emission r="0" g="0" b="0" a="1" />
            <ambient r="0.1" g="0.1" b="0.1" a="1" />
            <diffuse r="0.678" g="0.698" b="0.741" a="1" />
            <specular r="0.03" g="0.03" b="0.03" a="1" />
        </material>
    </materials>
    <transformations>
		
    </transformations>
    <animations>
        <linear id="lift-off" span="3">
            <controlpoint xx="0" yy="0" zz="0"/>
            <controlpoint xx="0" yy="5" zz="0"/>
        </linear>
        <linear id="up" span="5">
            <controlpoint xx="0" yy="5" zz="0"/>
            <controlpoint xx="2" yy="6" zz="0"/>
            <controlpoint xx="4" yy="7" zz="0"/>
            <controlpoint xx="6" yy="7" zz="0"/>
            <controlpoint xx="8" yy="6" zz="0"/>
            <controlpoint xx="10" yy="5" zz="0"/>
            <controlpoint xx="12" yy="3" zz="0"/>
        </linear>
        <linear id="down" span="11">
            <controlpoint xx="12" yy="3" zz="0"/>
            <controlpoint xx="14" yy="0" zz="0"/>
            <controlpoint xx="14" yy="-3" zz="0"/>
            <controlpoint xx="14" yy="-6" zz="0"/>
            <controlpoint xx="12" yy="-9" zz="0"/>
            <controlpoint xx="12" yy="-12" zz="0"/>
            <controlpoint xx="10" yy="-14" zz="0"/>
            <controlpoint xx="8" yy="-16" zz="0"/>
            <controlpoint xx="6" yy="-18" zz="0"/>
        </linear>
        <circular id="hover" span="5" center="6 -18 0" radius="5"
                    startang="0" rotang="360" />
    </animations>
    <primitives>
        <primitive id="quad">
            <rectangle x1="-0.5" y1="-0.5" x2="0.5" y2="0.5" />
        </primitive>
        <primitive id="sphere1">
            <sphere radius="5" slices="50" stacks="50" />
        </primitive>
        <primitive id="rug">
            <cylinder base="10" top="10" height="0.1" slices="20" stacks="20" />
        </primitive>
        <primitive id="lamppilar">
            <cylinder base="0.25" top="0.25" height="10" slices="20" stacks="20" />
        </primitive>
        <primitive id="lampbase">
            <cylinder base="1.5" top="0.25" height="0.5" slices="20" stacks="20" />
        </primitive>
        <primitive id="lampshade">
            <cylinder base="3" top="2" height="4" slices="20" stacks="20" />
        </primitive>
        <primitive id="torus">
            <torus inner="1" outer="5" slices="20" loops="10" />
        </primitive>
        <primitive id="lampsphere">
            <sphere radius="1" slices="20" stacks="10" />
        </primitive>
        <primitive id="drawknob">
            <cylinder base="0.2" top="0.2" height="0.4" slices="20" stacks="20" />
        </primitive>
        <primitive id="pillow1">
            <cylinder base="1" top="1" height="4" slices="20" stacks="10" />
        </primitive>
        <primitive id="cactusbase">
            <cylinder base="0.5" top="1" height="1" slices="20" stacks="10" />
        </primitive>
        <primitive id="triangle">
            <triangle x1="0" y1="0" z1="0" x2="0" y2="5" z2="0" x3="0" y3="0" z3="5"/>
        </primitive>
        <primitive id="cactusplant">
            <sphere radius="0.75" slices="20" stacks="20" />
        </primitive>
        <primitive id="mirrortorus">
            <torus inner="0.25" outer="2" slices="20" loops="10" />
        </primitive>
        <primitive id="mirror">
            <cylinder base="2" top="2" height="0.1" slices="20" stacks="10" />
        </primitive>
        <primitive id="mug">
            <cylinder base="0.6" top="0.6" height="1.5" slices="20" stacks="10" />
        </primitive>
        <primitive id="handle">
            <torus inner="0.1" outer="0.5" slices="20" loops="10" />
        </primitive>
        <primitive id="puf">
            <cylinder base="2" top="2" height="3" slices="20" stacks="10" />
        </primitive>
        <primitive id="puf2">
            <torus inner="0.2" outer="2" slices="20" loops="10" />
        </primitive>
        <primitive id="plane">
            <plane npartsU="8" npartsV="6" />
        </primitive>
        <primitive id="patch">
            <patch npointsU="2" npointsV="2" npartsU="8" npartsV="6">
                <controlpoint xx="-0.5" yy="0" zz="0.5" />
                <controlpoint xx="-0.5" yy="0" zz="-0.5" />
                <controlpoint xx="0.5" yy="0" zz="0.5" />
                <controlpoint xx="0.5" yy="0" zz="-0.5" />
            </patch>
        </primitive>
        <primitive id="cylinder2">
            <cylinder2 base="2" top="0" height="3" slices="20" stacks="10" />
        </primitive>
        <primitive id="terrain">
            <terrain idtexture="terrain" idheightmap="terrain-map" parts="100" heightscale="30"/>
        </primitive>
        <primitive id="water">
            <water idtexture="water" idwavemap="water-map" parts="100" heightscale="15" texscale="3" />
        </primitive>
        <primitive id="vehicle">
            <vehicle />
        </primitive>
    </primitives>
    <components>
        <component id="terrain">
            <transformation>
                <scale x="100" y="1" z="100" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="none" />
            <children>
                <primitiveref id="terrain" />
            </children>
        </component>
        <component id="water">
            <transformation>
                <scale x="250" y="1" z="250" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="none" />
            <children>
                <primitiveref id="water" />
            </children>
        </component>
        <component id="vehicle">
            <transformation>
                <scale x="0.8" y="0.8" z="0.8" />
            </transformation>
            <animations>
                <animationref id="lift-off" />
                <animationref id="up" />
                <animationref id="down" />
                <animationref id="hover" />
                <!-- <animationref id="landing" /> -->
            </animations>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="none" />
            <children>
                <primitiveref id="vehicle" />
            </children>
        </component>
        <component id="root">
            <transformation>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="none"/>
            <children>
				<componentref id="water"/>
                <componentref id="terrain"/>
                <componentref id="vehicle" />
            </children>
        </component>
    </components>
</yas>

